{
  "name": "lighthouse-developer-portal devcontainer",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "overrideCommand": false,
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "--privileged",
    "--init"
  ],

  // Set *default* container specific settings.json values on container create.
  "settings": {
    "terminal.integrated.profiles.linux": {
      "bash": {
        "path": "bash"
      },
      "zsh": {
        "path": "zsh"
      },
      "fish": {
        "path": "fish"
      },
      "tmux": {
        "path": "tmux"
      },
      "pwsh": {
        "path": "pwsh"
      }
    },
    "git.enableCommitSigning": true,
    "go.toolsManagement.checkForUpdates": "local",
    "go.useLanguageServer": true,
    "go.gopath": "/user/local/go/bin",
    "go.goroot": "/usr/local/go/"
  },
  // Add the IDs of extensions you want installed when the container is created.
  "extensions": ["ms-azuretools.vscode-docker", "dbaeumer.vscode-eslint"],

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [3000, 5432],

  // Use 'postCreateCommand' to run commands after the container is created.
  // Install dependencies and give permission to use docker
  "postStartCommand": "bash -c './scripts/start_up.sh'",

  // Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
  "remoteUser": "codespace"
}
